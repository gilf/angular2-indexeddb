{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "declaration": true,
    "lib": ["dom","es6"]
  },
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
   "genDir": ".",
   "skipMetadataEmit" : false,
   "skipTemplateCodegen": true
 }
}
